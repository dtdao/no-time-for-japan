{
  "manifest_version": 2,
  "name": "no-time-for-japan",
  "version": "1.0",
  "description": "Remove adds from japan-time website",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "NoTimeForJapan",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.japantimes.co.jp/*"],
      "js": ["popup.js"]
    }
  ]
}
